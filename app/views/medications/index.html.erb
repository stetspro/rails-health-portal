<h1><%= @patient.first_name %>'s Medications</h1>

<table>
  <thead>
    <tr>
      <th>Brand Name</th>
      <th>Dosage</th>
      <th>Frequency</th>
      <th>Delivery</th>
      <th>Pharmacological Name</th>
      <th>Diagnosis</th>
      <th>Expiration Date</th>
    </tr>
  </thead>

  <tbody>
    <% @patient_medications.each do |patient_medication| %>
      <tr class="<%= 'expired-medication' if patient_medication.expiration_date < Date.today %>">
        <td><%= patient_medication.medication.brand_name %></td>
        <td><%= patient_medication.medication.dosage %></td>
        <td><%= patient_medication.medication.frequency %></td>
        <td><%= patient_medication.medication.delivery %></td>
        <td><%= patient_medication.medication.pharmacological_name %></td>
        <td><%= patient_medication.patient_diagnosis.diagnosis.name %></td>
        <td><%= patient_medication.expiration_date.strftime("%m-%d-%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
