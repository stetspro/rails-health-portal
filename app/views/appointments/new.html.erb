<%= form_for([@patient, @appointment]) do |f| %>
  <%= f.label :doctor_id, "Choose a doctor:" %>
  <%= f.collection_select(:doctor_id, @doctors, :id, :full_name, prompt: "Select a doctor") %>

  <%= f.label :appointment_date, "Choose a date for your appointment:" %>
  <%= f.date_field :appointment_date, id: "appointment-date" %>
  <div id="my-calendar"></div>
  
  <%= f.submit "Next" %>
<% end %>
